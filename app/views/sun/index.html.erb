  <body>
    <canvas id="myCanvas" width="1420" height="760" style="border:2px solid #000000;">
    </canvas>
		<%= timepiece('London', type: '12', lead: '0') %>
    <script>
		
	var canvas = document.getElementById("myCanvas");
	var context = canvas.getContext("2d");

	drawScene();

	function drawScene() {
		switch (new Date().getHours()) {
    	case 0:
        	sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 600;
        	moonYpos = 100;
        	skyColour = "Black";
        	mountainColour = "#556B2F";
        	break;
    	case 1:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 500;
        	moonYpos = 125;
        	skyColour = "Black";
        	mountainColour = "#556B2F";
        	break;
        case 2:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 400;
        	moonYpos = 150;
        	skyColour = "Black";
        	mountainColour = "#556B2F";
        	break;
        case 3:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 300;
        	moonYpos = 175;
        	skyColour = "Black";
        	mountainColour = "#556B2F";
        	break;
		case 4:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 250;
        	moonYpos = 200;
        	skyColour = "Black";
        	mountainColour = "#556B2F";
        	break;
        case 5:
			sunXpos = 1150;
        	sunYpos = 300;
        	moonXpos = 200;
        	moonYpos = 225;
        	skyColour = "Orange";
        	mountainColour = "#006400";
        	break;
		case 6:
			sunXpos = 1100;
        	sunYpos = 225;
        	moonXpos = 150;
        	moonYpos = 275;
        	skyColour = "Orange";
        	mountainColour = "#006400";
        	break;
		case 7:
			sunXpos = 1050;
        	sunYpos = 200;
        	moonXpos = 100;
        	moonYpos = 300;
        	skyColour = "#00FFFF";
        	mountainColour = "#20B2AA";
        	break;
		case 8:
			sunXpos = 1000;
        	sunYpos = 175;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#00FFFF";
        	mountainColour = "#20B2AA";
        	break;
        case 9:
			sunXpos = 900;
        	sunYpos = 175;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#00FFFF";
        	mountainColour = "#20B2AA";
        	break;
		case 10:
			sunXpos = 800;
        	sunYpos = 150;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#00FFFF";
        	mountainColour = "Green";
        	break;
		case 11:
			sunXpos = 700;
        	sunYpos = 125;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#6495ED";
        	mountainColour = "Green";
        	break;
		case 12:
			sunXpos = 600;
        	sunYpos = 100;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#6495ED";
        	mountainColour = "Green";
        	break;
		case 13:
			sunXpos = 500;
        	sunYpos = 125;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#6495ED";
        	mountainColour = "Green";
        	break;
		case 14:
			sunXpos = 400;
