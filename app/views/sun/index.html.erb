		case 16:
			sunXpos = 300;
        	sunYpos = 200;
        	moonXpos = 600;
        	moonYpos = 500;
        	skyColour = "#1E90FF";
        	mountainColour = "#20B2AA";
        	break;
		case 17:
			sunXpos = 250;
        	sunYpos = 225;
        	moonXpos = 1150;
        	moonYpos = 300;
        	skyColour = "#FF8C00";
        	mountainColour = "#20B2AA";
        	break;
        case 18:
			sunXpos = 150;
