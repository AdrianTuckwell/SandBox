        	moonXpos = 1000;
        	moonYpos = 175;
        	skyColour = "Red";
        	mountainColour = "#5F9EA0";
        	break;
        case 21:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 900;
        	moonYpos = 150;
        	skyColour = "Black";
        	mountainColour = "#5F9EA0";
        	break;
		case 22:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 800;
        	moonYpos = 125;
        	skyColour = "Black";
        	mountainColour = "#5F9EA0";
        	break;
		case 23:
			sunXpos = 600;
        	sunYpos = 500;
        	moonXpos = 700;
        	moonYpos = 100;
        	skyColour = "Black";
        	mountainColour = "#5F9EA0";
        	break;
		}

  		drawSky(skyColour);
  		drawSun('yellow',sunXpos,sunYpos);
  		drawMoon('white',moonXpos,moonYpos);
  		drawMountain(mountainColour);
  		drawWords();
	}

		
	// Draw the sky -----------------------------------
	function drawSky(colour){
		context.beginPath();
		context.fillStyle = colour;
		context.lineTo(0,500);
		context.lineTo(1420,500);
		context.lineTo(1420,0);
		context.lineTo(0,0);
		context.fill();
		context.stroke();
	}

	// Draw the Sun-----------------------------------------
	function drawSun(colour,xpos,ypos){
		context.beginPath();
		context.fillStyle = colour;
  		context.arc(xpos,ypos,50,0,Math.PI*2,true); // Outer circle
  		context.fill();
  		context.stroke();
  	}

  	// Draw the moon----------------------------------------
	function drawMoon(colour,xpos,ypos){
		context.beginPath();
		context.fillStyle = colour;
  		context.arc(xpos,ypos,50,0,Math.PI*2,true); // Outer circle
  		context.fill();
  		context.stroke();
  	}

  	// Draw the mountain -----------------------------------
  	function drawMountain(colour){
  		context.beginPath();
  		context.fillStyle = colour;
		context.moveTo(0,500);
  		context.lineTo(200,480);
		context.lineTo(400,400);
		context.lineTo(600,200);
		context.lineTo(800,300);
		context.lineTo(1000,250);
		context.lineTo(1200,400);
		context.lineTo(1420,480);
		context.lineTo(1420,790);
		context.lineTo(0,790);
		context.lineTo(0,500);
		context.fill();
  		context.stroke();
  	}

  	function drawWords(){
  		context.font = "30px Comic Sans MS";
  		context.fillStyle = "black";
		context.fillText("Hello Bennachie...",10,670);
		context.fillText("The Sun and Moon will rise and set depending on the time of day",10,720);
  	}

	</script>


